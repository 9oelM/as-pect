  "description": "Write AssemblyScript tests at blazing fast speeds",
  "main": "lib/index.js",
  "types": "./assembly/__tests__/as-pect.d.ts",
  "scripts": {
    "test": "run-s tsc asp jest",
    "asp": "node lib/test",
    "jest": "jest",
    "tsc": "run-p tsc:default tsc:amd",
