    "url": "https://github.com/jtenner/aspect/issues"
  },
  "homepage": "https://github.com/jtenner/as-pect#readme",
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.13",
    "@types/mathjs": "^5.0.1",
    "@types/node": "^12.0.2",
    "@types/webassembly-js-api": "0.0.3",
    "@types/yargs-parser": "^13.0.0",
    "coveralls": "^3.0.3",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
